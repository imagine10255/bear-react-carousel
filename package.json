{
  "name": "@imagine10255/react-carousel",
  "version": "1.0.1",
  "description": "Most modern mobile touch slider with hardware accelerated transitions by react",
  "author": "imagine10255",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/imagine10255/react-carousel.git"
  },
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "source": "src/index.tsx",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "microbundle-crl --no-compress --no-css-modules --format modern,cjs",
    "dev": "cd example && yarn install && yarn run start",
    "start": "microbundle-crl watch --no-compress --no-css-modules --format modern,cjs",
    "prepare": "run-s build",
    "test": "run-s test:unit test:lint test:build",
    "test:build": "run-s build",
    "test:lint": "eslint .",
    "test:unit": "cross-env CI=1 react-scripts test --env=jsdom",
    "test:watch": "react-scripts test --env=jsdom",
    "storybook": "cd example && yarn install && yarn run storybook",
    "predeploy": "cd example && yarn install && yarn run build-storybook",
    "deploy": "gh-pages -d example/storybook-static",
    "lint:fix": "eslint ./src --fix"
  },
  "peerDependencies": {
    "react": "17.0.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "@types/jest": "^25.1.4",
    "@types/node": "15.0.3",
    "@types/react": "17.0.5",
    "@types/react-dom": "^16.9.7",
    "microbundle-crl": "^0.13.10",
    "babel-eslint": "^10.0.3",
    "cross-env": "^7.0.2",
    "gh-pages": "^2.2.0",
    "npm-run-all": "^4.1.5",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-scripts": "4.0.3",
    "typescript": "4.1.5",
    "@github/mini-throttle": "2.1.0"
  },
  "files": [
    "dist"
  ],
  "eslintConfig": {
    "extends": [
      "react-app"
    ],
    "rules": {
      "quotes": [
        "warn",
        "single"
      ],
      "semi": [
        "warn",
        "always"
      ],
      "indent": [
        "warn",
        4
      ],
      "object-curly-spacing": [
        "error",
        "never"
      ],
      "import/no-anonymous-default-export": "off"
    }
  }
}
